class Student:
    def __init__(self, name, age, year_of_birth):
        self.name = name
        self.age = age
        self.year_of_birth = year_of_birth

    def calculate_birth_year(self):
        return 2024 - self.age

    def generate_description(self):
        description = f"Студент {self.name}, {self.age} років, рік народження {self.year_of_birth}."
        return description

student1 = Student("Аня", 19, 2005)

print(student1.generate_description())
